<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>common/black.png</texture>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="80" time="200" tween="sine" easing="in" />
            </animation>
        </control>
        <control type="group">
            <left>260</left>
            <top>100</top>
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="50" end="100" time="200" center="910,440" tween="quadratic" easing="out" />
            </animation>
            <control type="group">
                <width>1400</width>
                <control type="image">
                    <height>885</height>
                    <texture colordiffuse="FF4a4347">common/white.png</texture>
                </control>
                <control type="image">
                    <height>100</height>
                    <texture colordiffuse="$INFO[Window(10000).Property(fen.highlight)]">common/gradients/gradient-underlayer-horizontal-flipped.png</texture>
                </control>
                <control type="image">
                    <left>15</left>
                    <top>15</top>
                    <width>70</width>
                    <height>70</height>
                    <align>left</align>
                    <aligny>top</aligny>
                    <aspectratio aligny="top">keep</aspectratio>
                    <texture colordiffuse="FFCCCCCC">common/fen.png</texture>
                </control>
                <control type="label">
                    <width max="1200">auto</width>
                    <top>35</top>
                    <left>110</left>
                    <height>20</height>
                    <font>font12</font> <!-- FEN_26 -->
                    <textcolor>FFFFFFFF</textcolor>
                    <align>center</align>
                    <label>[UPPERCASE][B]$INFO[Window().Property(heading)][/B][/UPPERCASE]</label>
                </control>
                <control type="group">
                    <visible>!String.IsEqual(Container(2025).ListItem.Property(default_icon),true)</visible>
                    <control type="image">
                        <left>870</left>
                        <top>135</top>
                        <aligny>left</aligny>
                        <height>720</height>
                        <width>500</width>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture>$INFO[Container(2025).ListItem.Property(icon)]</texture>
                        <fadetime>100</fadetime>
                    </control>
                </control>
                <control type="group">
                    <visible>String.IsEqual(Container(2025).ListItem.Property(default_icon),true)</visible>
                    <control type="image">
                        <left>870</left>
                        <top>355</top>
                        <aligny>left</aligny>
                        <height>500</height>
                        <width>500</width>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture>common/fen_large.png</texture>
                    </control>
                </control>
            </control>
            <control type="fixedlist" id="2025">
                <pagecontrol>2065</pagecontrol>
                <left>0</left>
                <top>135</top>
                <width>800</width>
                <height>720</height>
                <onup>2025</onup>
                <ondown>2025</ondown>
                <onright>2065</onright>
                <scrolltime tween="sine">200</scrolltime>
                <orientation>Vertical</orientation>
                <focusposition>3</focusposition>
                <movement>4</movement>
                <scrolltime tween="sine">200</scrolltime>
                <itemlayout height="90" width="800">
                    <control type="label">
                        <description>Only Line1</description>
                        <visible>String.IsEqual(Window().Property(multi_line),false)</visible>
                        <width max="740">auto</width>
                        <left>40</left>
                        <top>45</top>
                        <height>5</height>
                        <font>font12</font> <!-- FEN_26 -->
                        <textcolor>FFCCCCCC</textcolor>
                        <aligny>center</aligny>
                        <label>[UPPERCASE]$INFO[ListItem.Property(line1)][/UPPERCASE]</label>
                    </control>
                    <control type="group">
                        <description>Line1 and Line2</description>
                        <visible>String.IsEqual(Window().Property(multi_line),true)</visible>
                        <width max="740">auto</width>
                        <left>40</left>
                        <control type="label">
                            <top>25</top>
                            <height>5</height>
                            <font>font12</font> <!-- FEN_26 -->
                            <textcolor>FFCCCCCC</textcolor>
                            <aligny>center</aligny>
                            <label>[UPPERCASE]$INFO[ListItem.Property(line1)][/UPPERCASE]</label>
                        </control>
                        <control type="label">
                            <top>60</top>
                            <height>5</height>
                            <font>font12</font> <!-- FEN_26 -->
                            <textcolor>FFA9A8A8</textcolor>
                            <aligny>center</aligny>
                            <label>[UPPERCASE][I]$INFO[ListItem.Property(line2)][/I][/UPPERCASE]</label>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout height="90" width="800">
                    <control type="image">
                        <width>1200</width>
                        <height>90</height>
                        <aligny>top</aligny>
                        <texture colordiffuse="FFCCCCCC">common/white.png</texture>
                        <animation effect="fade" start="100" end="50" time="0" condition="!Control.HasFocus(2025)">Conditional</animation>
                    </control>
                    <control type="image">
                        <width>30</width>
                        <height>90</height>
                        <aligny>top</aligny>
                        <texture colordiffuse="$INFO[Window(10000).Property(fen.highlight)]">common/white.png</texture>
                        <animation effect="fade" start="100" end="50" time="0" condition="!Control.HasFocus(2025)">Conditional</animation>
                    </control>
                    <control type="label">
                        <description>Only Line1</description>
                        <visible>String.IsEqual(Window().Property(multi_line),false)</visible>
                        <left>40</left>
                        <top>45</top>
                        <height>5</height>
                        <width max="740">auto</width>
                        <font>font12</font> <!-- FEN_26 -->
                        <textcolor>FF4a4347</textcolor>
                        <aligny>center</aligny>
                        <label>[UPPERCASE]$INFO[ListItem.Property(line1)][/UPPERCASE]</label>
                    </control>
                    <control type="group">
                        <description>Line1 and Line2</description>
                        <visible>String.IsEqual(Window().Property(multi_line),true)</visible>
                        <width max="740">auto</width>
                        <left>40</left>
                        <control type="label">
                            <top>25</top>
                            <height>5</height>
                            <font>font12</font> <!-- FEN_26 -->
                            <textcolor>FF4a4347</textcolor>
                            <aligny>center</aligny>
                            <label>[UPPERCASE][B]$INFO[ListItem.Property(line1)][/B][/UPPERCASE]</label>
                        </control>
                        <control type="label">
                            <top>60</top>
                            <height>5</height>
                            <font>font12</font> <!-- FEN_26 -->
                            <textcolor>FF5B5B5B</textcolor>
                            <aligny>center</aligny>
                            <label>[UPPERCASE][I]$INFO[ListItem.Property(line2)][/I][/UPPERCASE]</label>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="2065">
                <top>135</top>
                <left>830</left>
                <width>20</width>
                <height>720</height>
                <texturesliderbackground colordiffuse="FF302F2F">common/white.png</texturesliderbackground>
                <texturesliderbar colordiffuse="FF555556">common/white.png</texturesliderbar>
                <texturesliderbarfocus colordiffuse="$INFO[Window(10000).Property(fen.highlight)]">common/white.png</texturesliderbarfocus>
                <onleft>2025</onleft>
                <onright>10</onright>
                <showonepage>false</showonepage>
                <orientation>vertical</orientation>
                <visible>Control.IsVisible(2025)</visible>
            </control>
        </control>
    </controls>
</window>
