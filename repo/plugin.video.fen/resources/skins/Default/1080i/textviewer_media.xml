<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>common/black.png</texture>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="80" time="200" tween="sine" easing="in" />
            </animation>
        </control>
        <control type="group">
            <left>100</left>
            <top>135</top>
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="50" end="100" time="200" center="770,560" tween="quadratic" easing="out" />
            </animation>
            <control type="image">
                <height>810</height>
                <width>1720</width>
                <texture colordiffuse="FF302F2F">common/white.png</texture>
            </control>
            <control type="group">
                <control type="image">
                    <left>1170</left>
                    <top>10</top>
                    <height max="792">auto</height>
                    <width max="530">auto</width>
                    <align>center</align>
                    <aligny>center</aligny>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[Window.Property(poster)]</texture>
                </control>
                <control type="image">
                    <left>7</left>
                    <top>7</top>
                    <width>45</width>
                    <height>45</height>
                    <align>right</align>
                    <aligny>top</aligny>
                    <aspectratio aligny="top">keep</aspectratio>
                    <texture colordiffuse="B3CCCCCC">common/fen.png</texture>
                </control>
                <control type="textbox">
                    <top>50</top>
                    <left>20</left>
                    <width>1120</width>
                    <height>715</height>
                    <font>font14</font> <!-- FEN_33 -->
                    <align>center</align>
                    <aligny>center</aligny>
                    <textcolor>FFB7B4BB</textcolor>
                    <label>$INFO[Window.Property(text)]</label>
                    <pagecontrol>2060</pagecontrol>
                </control>
                <control type="scrollbar" id="2060">
                    <left>1155</left>
                    <top>10</top>
                    <width>15</width>
                    <height>790</height>
                    <texturesliderbackground colordiffuse="FF302F2F">common/white.png</texturesliderbackground>
                    <texturesliderbar colordiffuse="FF555556">common/white.png</texturesliderbar>
                    <texturesliderbarfocus colordiffuse="$INFO[Window(10000).Property(fen.highlight)]">common/white.png</texturesliderbarfocus>
                    <onleft>2060</onleft>
                    <onright>2060</onright>
                    <showonepage>false</showonepage>
                    <orientation>vertical</orientation>
                </control>
            </control>
        </control>
    </controls>
</window>
